{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "types": ["jasmine"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@app/core/*": ["src/app/core/*"],
      "@app/shared/*": ["src/app/shared/*"],
      "@env/*": ["src/environments/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
